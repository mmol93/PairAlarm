<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PairAlarm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- numberPickerCustomTheme -->
    <style name="numberPickerCustomTheme">
        <item name="android:textSize">
            20sp
        </item>
        <item name="fontFamily">
            @font/naver_bold
        </item>
        <item name="android:editTextColor">
            @color/white
        </item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/background</item>
        <item name="colorSecondary">@color/deep_yellow</item>
    </style>

    <!-- seekbar style -->
    <style name="seekbarTheme" parent="Theme.AppCompat.Light">
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/mainColor</item>
        <item name="android:colorControlActivated">@color/main_orange</item>
    </style>

    <style name="Theme.PairAlarm.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>